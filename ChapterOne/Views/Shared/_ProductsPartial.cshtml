@model List<Product>

@foreach (var product in Model)
{
    <div class="col-lg-4 col-md-6 col-sm-12 all-products">
        <div class="products">
            <div class="image">
                <a href="ProductDetail.html">
                    <img src="~/assets/images/shop/@product.Image"
                     alt="">
                </a>
            </div>
            <div class="name">
                <a href="ProductDetail.html">@product.ProductAuthors.FirstOrDefault().Author.Name</a>
            </div>
            <div class="category-name">
                <a href="ProductDetail.html">@product.Name</a>
            </div>
            <div class="price-button">
                <p>$@product.Price</p>
            </div>
        </div>
        <div class="wishlist-cart">
            <i class="fa-solid fa-heart" data-toggle="tooltip" data-placement="top"
           title="Add To Wishlist"></i>
            <i class="fa-solid fa-cart-shopping" data-toggle="tooltip" data-placement="top"
           title="Add To Cart"></i>
        </div>
    </div>
}


