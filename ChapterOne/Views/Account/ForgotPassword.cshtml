@model ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
}

<!-- Main Area -->
<main>
    <section id="background">
        <div class="background-images"
             style="background-image:url(/assets/images/forgot-password/forgot-password-backgorund-image.jpg)">
            <h2>Forgot Password</h2>
        </div>
    </section>
    <form method="post" asp-controller="Account" asp-action="ForgotPassword">
        <section id="forgot-password-form">
            <div class="container">
                <div class="login">
                    <h2>Forgot Password</h2>
                </div>
                <div class="email-label">
                    <label for="">Email *</label>
                </div>
                <div class="email-input">
                    <input type="email" asp-for="Email">
                </div>

                <div class="send-button">
                    <button type="submit">Send</button>
                </div>
            </div>
        </section>
    </form>

</main>
<!-- Main Area -->
